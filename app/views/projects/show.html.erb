<h2><%= @project.name %></h2>
<%= link_to "Edit Project", edit_project_path(@project) %>
<%= link_to "Delete Project", project_path(@project), method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to "New Role", new_project_role_path(@project) %>
<ul>
  <% @project.roles.each do |role| %>
    <li>
      #<%= role.id %> - 
      <%= link_to role.name, [@project, role] %>
    </li>
  <% end %>
</ul>